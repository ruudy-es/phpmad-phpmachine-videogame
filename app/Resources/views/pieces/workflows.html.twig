<div class="col-sm-6">
    <h4>Forge (Workflow nets)</h4>

    <div class="row">
        <div class="col-sm-12">
            {% for item in items %}
                <form method="post" action="{{ path('build') }}" class="pull-left">
                    <input type="hidden" name="item_id" value="{{ item.id }}">
                    <button type="submit" class="btn btn-default">Build {{ item.name }}</button>
                </form>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h5>Sword progress</h5>

            <img width="100%" src="{{ asset('images/' ~ weapon_marking ~'.png') }}">
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h5>Shield progress</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h5>Iron Armor progress</h5>
        </div>
    </div>
</div>