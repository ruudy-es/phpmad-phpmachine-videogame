<div class="col-sm-6">
    <h4>Trainer</h4>
    <div class="row">
        {% for trade_skill in trade_skills %}
            <div class="col-sm-6">
                <form method="post" action="{{ path('train') }}" class="pull-left">
                    <input type="hidden" name="trade_skill_id" value="{{ trade_skill.id }}">
                    <button type="submit" class="btn btn-link">
                        <img width="44px" src="{{ asset('images/' ~ trade_skill.name ~ '.png') }}">
                        {{ trade_skill.cost }} <img width="22px" src="{{ asset('images/gold.png') }}">
                    </button>
                </form>
            </div>
        {% endfor %}
    </div>
</div>

<div class="col-sm-6">
    <h4>Materials</h4>
    <div class="row">
        {% for material in materials %}
            <div class="col-sm-6">
                <form method="post" action="{{ path('buy') }}" class="pull-left">
                    <input type="hidden" name="material_id" value="{{ material.id }}">
                    <button type="submit" class="btn btn-link">
                        <img width="44px" src="{{ asset('images/' ~ material.name ~ '.png') }}">
                        {{ material.cost }} <img width="22px" src="{{ asset('images/gold.png') }}">
                    </button>
                </form>
            </div>
        {% endfor %}
    </div>
</div>