<div class="col-sm-12">
    <h4>Me vs Enemy</h4>
    <div class="row">
        <div class="col-sm-6">
            <form method="post" action="{{ path('player_vs_enemy') }}" class="pull-left">
                <input type="hidden" name="times" value="1">
                <button type="submit" class="btn btn-default">1 Turn</button>
            </form>
        </div>
        <div class="col-sm-6">
            <div class="pull-right">
                {% if player_character.fightingWith is not null %}
                    <p class="navbar-text">{{ player_character.fightingWith.name }}{{ ' - ' }}{{ player_character.fightingWith.health }}</p>
                    <a class="navbar-brand" href="#">
                        <img width="22px" src="{{ asset('images/health.png') }}">
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <img width="100%" src="{{ asset('images/' ~ player_character.state ~'.png') }}">
        </div>
    </div>

    <h4>Console</h4>
    <div class="row">
        <div class="col-sm-12">
            <ul>
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <li>{{ flashMessage }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>